{
  "name": "writetyper",
  "version": "0.1.0",
  "description": "WriteTyper - Generate handwriting text as SVG paths",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && nodemon --watch electron --exec electron .\"",
    "vite": "vite",
    "electron": "electron .",
    "build": "vite build && electron-builder"
  },
  "dependencies": {
    "opentype.js": "^1.3.4",
    "tesseract.js": "^6.0.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "nodemon": "^3.1.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  }
}
